<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <div class="nav mb-10">
            <a class="text-blue-500" href="/">back to home</a>
        </div>

      <h1 class="text-4xl tracking-tighter mb-10">All User</h1>
      <div class="users flex gap-4 flex-wrap mt-3">
        <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                    <img class="w-full h-full object-cover" src="/uploads/<%= user.image %>" alt="">
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3">
                      <a class="text-green-600" href="/edit/<%= user._id %>">Edit User</a>
                      <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                </div>
              </div>
        <% }) %>


      </div>
    </div>
  </body>
</html>
